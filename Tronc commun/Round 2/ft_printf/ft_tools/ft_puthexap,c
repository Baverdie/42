#include "printf.h"

int	ft_puthexap(unsigned long long f, char *base)
{
	int	c;

	c = 0;
	if (f < 16)
		c += ft_putchar(base[f]);
	else
	{
		c += ft_putnbr(f / 16);
		c += ft_putchar(base[f % 16]);
	}
	return (c);
}
